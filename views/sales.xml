<odoo>
    <record id="view_inventory_sale_order_tree" model="ir.ui.view">
        <field name="name">inventory.sale.order.tree</field>
        <field name="model">inventory.sale.order</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'delivered'">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="date_order"/>
                <field name="total_amount"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-primary="state == 'delivered'"/>
<!--                <field name="invoice_state"/>-->
            </tree>
        </field>
    </record>

    <record id="view_inventory_sale_order_form" model="ir.ui.view">
        <field name="name">inventory.sale.order.form</field>
        <field name="model">inventory.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm Order"/>
                    <button name="action_deliver" string="Mark as Delivered"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <button name="action_view_invoice" string="View Invoice" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,delivered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id" options="{'no_create': True}"/>
                            <field name="date_order"/>
                        </group>
                        <group>
<!--                            <field name="invoice_id" readonly="1"/>-->
<!--                            <field name="invoice_state" readonly="1"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
<!--                            <field name="order_line_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="product_id" options="{'no_create': True}"/>-->
<!--                                    <field name="description"/>-->
<!--                                    <field name="quantity"/>-->
<!--                                    <field name="unit_price"/>-->
<!--                                    <field name="discount"/>-->
<!--                                    <field name="subtotal" sum="Total"/>-->
<!--                                </tree>-->
<!--                            </field>-->
                            <group class="oe_subtotal_footer">
                                <field name="subtotal"/>
                                <field name="tax_amount"/>
                                <field name="discount_amount"/>
                                <div class="oe_subtotal_footer_separator">
                                    <strong><field name="total_amount"/></strong>
                                </div>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_inventory_sale_order" model="ir.actions.act_window">
        <field name="name">Sale Orders</field>
        <field name="res_model">inventory.sale.order</field>
        <field name="view_mode">tree,form</field>
    </record>

      <menuitem id="menu_inventory_customer_sales"
              name="sales"
              parent="menu_inventory_root"
              action="action_inventory_sale_order"
              sequence="20"/>
</odoo>