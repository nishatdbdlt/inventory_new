 <odoo>
  <record id="view_inventory_purchase_order_tree" model="ir.ui.view">
        <field name="name">inventory.purchase.order.tree</field>
        <field name="model">inventory.purchase.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="supplier_name"/>
                <field name="date_order"/>
                <field name="total_amount"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_inventory_purchase_order_form" model="ir.ui.view">
        <field name="name">inventory.purchase.order.form</field>
        <field name="model">inventory.purchase.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm Order" type="object"/>
                    <button name="action_receive" string="Receive Products" type="object"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="supplier_name"/>
                            <field name="supplier_contact"/>
                        </group>
                        <group>
                            <field name="date_order"/>
                            <field name="expected_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal" sum="Total"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="subtotal"/>
                                <field name="tax_amount"/>
                                <div class="oe_subtotal_footer_separator">
                                    <strong><field name="total_amount"/></strong>
                                </div>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_inventory_purchase_order" model="ir.actions.act_window">
        <field name="name">Purchase Orders</field>
        <field name="res_model">inventory.purchase.order</field>
        <field name="view_mode">tree,form</field>
    </record>


      <menuitem id="menu_inventory_customer_purchase"
              name="purchase"
              parent="menu_inventory_root"
              action="action_inventory_purchase_order"
              sequence="20"/>

  </odoo>