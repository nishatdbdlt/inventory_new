<odoo>
    <!-- Tree View -->
    <record id="view_inventory_product_tree" model="ir.ui.view">
        <field name="name">inventory.product.tree</field>
        <field name="model">inventory.product</field>
        <field name="arch" type="xml">
            <tree string="Inventory Products">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="quantity_on_hand"/>
                <field name="state"/>
                <field name="cost_price"/>
                <field name="selling_price"/>
                <field name="profit_margin"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_inventory_product_form" model="ir.ui.view">
        <field name="name">inventory.product.form</field>
        <field name="model">inventory.product</field>
        <field name="arch" type="xml">
            <form string="Inventory Product">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="cost_price"/>
                            <field name="selling_price"/>
                            <field name="profit_margin" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="quantity_on_hand"/>
                            <field name="minimum_quantity"/>
                            <field name="maximum_quantity"/>
                            <field name="state" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Sales Order Lines">
<!--                            <field name="sale_order_line_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="product_id"/>-->
<!--                                    <field name="quantity"/>-->
<!--                                    <field name="price_unit"/>-->
<!--                                    <field name="subtotal"/>-->
<!--                                </tree>-->
<!--                            </field>-->
                        </page>
                        <page string="Purchase Order Lines">
<!--                            <field name="purchase_order_line_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="product_id"/>-->
<!--                                    <field name="quantity"/>-->
<!--                                    <field name="price_unit"/>-->
<!--                                    <field name="subtotal"/>-->
<!--                                </tree>-->
<!--                            </field>-->
                        </page>
                    </notebook>

                    <footer>
                        <button name="action_adjust_stock" type="object" string="Adjust Stock" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_inventory_product" model="ir.actions.act_window">
        <field name="name">Inventory Products</field>
        <field name="res_model">inventory.product</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first inventory product
            </p>
        </field>
    </record>

    <!-- Menu Items -->

</odoo>
